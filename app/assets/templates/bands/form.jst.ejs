<form id=new-band class='modal-form'>
  <ul id="errors"></ul>

  <label>Name
  <input class='mytext' type="text" name="band[name]" value="<%= band.escape('name') %>" class="mytext">
  </label>
  <br><br>

  <label>Tags</label>
    <input type="hidden" name="band[tag_ids][]" value="">
    <% Listener.tags.each(function (tag) { %>
      <label>
        <input
        type="checkbox"
        name="band[tag_ids][]"
        value="<%= tag.id %>"
        <% if (_.contains(band.get('tag_ids'), tag.id)) { %>
          checked
        <% } %>>
      <%= tag.escape('name') %>
      </label>
    <% }) %>
  <br><br>

  <input type="submit">
</form>

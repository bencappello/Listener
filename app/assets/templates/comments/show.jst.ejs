<% var authorN = comment.escape('author_name') %>
<% var authorU = '#/users/' + comment.escape('user_id') %>

<p class='comment'><a class='underline-link blue' href="<%= authorU %>"><strong><%= authorN %>:</strong></a></p>
<p><%= comment.escape('body') %></p>
<p class='time-stamp'>- posted <%= comment.postTime() %></p>

<% if (comment.get('author_id') == Listener.currentUser.id) { %>
  <button id='edit-comment' class="btn-comment" data-id='<%= comment.id %>'>Edit</button>
  <button id='delete-comment' class="btn-comment" data-id='<%= comment.id %>'>Delete</button>
  <% } %>
